@model IEnumerable<ContactManagement.Models.ContactViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="x_title" style="padding-top: 50px;">
    <h2>Contact Master:<small></small></h2>
    <div class="clearfix"></div>
</div>

<a href="@Url.Action("Create", "Contact")" class="btn btn-primary a-btn-slide-text" style="float:right;" type="reset">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    <span><strong>Create Contact</strong></span>
</a>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th style="width: 250px !important;">
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @if (item.Status)
                {
                    <p>Active</p>
                }
                else
                {
                    <p>Inactive</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Contact")/@item.ContactId " class="btn btn-success a-btn-slide-text">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    <span><strong>Edit</strong></span>
                </a>

                <a href="@Url.Action("Delete", "Contact")/@item.ContactId" class="btn btn-warning a-btn-slide-text">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    <span><strong>Delete</strong></span>
                </a>
            </td>
        </tr>
    }

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="6" style="text-align: center;">
                <b>No Records to display!!</b>
            </td>
        </tr>
    }

</table>
